{
  "extends": "@vue/tsconfig/tsconfig.web.json",
  "include": ["env.d.ts", "src/**/*", "src/**/*.vue"],
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@shared/*": ["../shared/src/*"],
      "@assets/*": ["../shared/src/assets/*"]
    },
    "allowJs" : true,
    "checkJs": false
  },

  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ]
}
